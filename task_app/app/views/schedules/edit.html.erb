<div class = "main_container">
  <h2>スケジュール編集</h2>
  <%= form_for(@schedule) do |f| %>
  <%= render 'shared/error_messages' %>
  <table>
  <tr>
    <th><%= f.label "タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>
  
  <tr>
    <th><%= f.label "開始日" %></th>
    <td><%= f.date_field :start_date %></td>
  </tr>
  
  <tr>
    <th><%= f.label "終了日" %></th>
    <td><%= f.date_field :end_date %></td>
  </tr>
  
  <tr>
    <th><%= f.label "終日" %></th>
    <td><%= f.check_box :all_day, :as => :boolean %></td>
  </tr>
  
  <tr>
    <th><%= f.label "スケジュールメモ" %></th>
    <td><%= f.text_field :memo %></td>
  </tr>
  
  </table>
  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", root_path %></li>
    </ul>
  </div>
  
  <% end %>
</div>